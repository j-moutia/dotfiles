# Alias sudo to run doas instead and allow aliases to be used as root
alias sudo="doas "

# Dotfiles repository command
alias config="/usr/bin/git --git-dir=$HOME/dotfiles --work-tree=$HOME"

# Some aliases
alias ls="ls --color --group-directories-first"
alias nf="clear && neofetch"
alias dmenu_run="dmenu_run -fn 'Terminus-8'"
alias nv="nvim"
alias upd="paru -Syu && pkill -RTMIN+1 dwmblocks"
alias fcast="curl \"https://wttr.in/Perth\""
alias cp="cp -iv"
alias mv="mv -iv"
alias ytd="youtube-dl"
alias ytdf="ytd -F"
alias mpv="mpv --profile=std"

# Directory aliases
alias cfg="cd $HOME/.config"
alias scr="cd $HOME/.scripts"
alias dls="cd $HOME/dls"
alias docs="cd $HOME/docs"
alias games="cd $HOME/games"
alias pics="cd $HOME/pics"
alias prog="cd $HOME/prog"
alias vids="cd $HOME/vids"

