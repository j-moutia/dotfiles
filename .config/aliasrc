# Allow aliases to be used as sudo
alias sudo="sudo "

# Dotfiles repository command
alias config="/usr/bin/git --git-dir=$HOME/dotfiles --work-tree=$HOME"

# Some aliases
alias ls="ls --color --group-directories-first"
alias nf="clear && neofetch"
alias dmenu_run="dmenu_run -fn 'Terminus-8'"
alias nv="nvim"
alias upd="yay -Syu && sigdwmblocks 3"
alias fcast="curl \"https://wttr.in/Perth\""
alias cp="cp -iv"
alias mv="mv -iv"
alias ytd="youtube-dl"
alias ytdf="ytd -F"

# Directory aliases
alias ccf="cd $HOME/.config"
alias csc="cd $HOME/.scripts"
