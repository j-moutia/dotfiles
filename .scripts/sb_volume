#!/bin/sh

# Display muted speaker if muted.
[ "$(pamixer --get-mute)" = "true" ] && printf "ðŸ”‡\\n" && exit

# Otherwise get the volume and display it with an approprate icon.
VOL=$(pamixer --get-volume)

if [ "$VOL" -gt "70" ]; then
    ICON="ðŸ”Š"
elif [ "$VOL" -lt "30" ]; then
    ICON="ðŸ”ˆ"
else
    ICON="ðŸ”‰"
fi

printf "%s %s%%\\n" "$ICON" "$VOL"

### END OF FILE
