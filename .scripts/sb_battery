#!/bin/sh

# battery - outputs the current battery capacity and its status

battery=/sys/class/power_supply/BAT0
cap=$(cat "$battery"/capacity 2>/dev/null)
stat=$(sed "s/[Dd]ischarging/ğŸ”‹/;s/[Nn]ot charging/ğŸ›‘/;s/[Cc]harging/ğŸ”Œ/;s/[Uu]nknown/â™»ï¸/;s/[Ff]ull/âš¡/" "$battery"/status)

printf "%s %s%%\n" "$stat" "$cap"

### END OF FILE
